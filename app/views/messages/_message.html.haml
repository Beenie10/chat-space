.message{data: {message: {id: message.id}}}
  .message-up
    .message-up__user
      = message.user.name
    .message-up__data
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .message-content
    - if message.content.present?
      %p.message-content__text
        = message.content
    = image_tag message.image.url, class: 'message-content__image' if message.image.present?
